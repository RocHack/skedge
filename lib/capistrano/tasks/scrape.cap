def scrape(task)
  on roles(:app) do
    within release_path do
      with rails_env: fetch(:stage) do
        execute :rake, "scrape:#{task} #{ENV['depts'] ? "depts="+ENV['depts'] : nil}"
      end
    end
  end
end

namespace :scrape do  
  desc 'Scrape data'
  task :all do
    scrape("all")
  end
  task :fall do
    scrape("fall")
  end
  task :spring do
    scrape("spring")
  end
end