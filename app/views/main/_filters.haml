.row
  #filters
    .col-sm-3
      .filter
        Credits:
        .btn-group
          %button.btn.btn-default.btn-xs.dropdown-toggle{type:"button", data:{toggle:"dropdown"}}
            =get_filter("credits")
            %span.caret
          %ul.dropdown-menu{role:"menu"}
            %li
              =fake_a("Any")
            %li.divider
            %li
              =fake_a("1-2")
              =fake_a("3-4")
              =fake_a("5+")
          =hidden_field_tag "credits", get_filter("credits"), {:class=>"dropdown-value", :id=>"filter-credits"}
    .col-sm-3
      .filter
        Term:
        .btn-group
          %button.btn.btn-default.btn-xs.dropdown-toggle{type:"button", data:{toggle:"dropdown"}}
            =get_filter("term")
            %span.caret
          %ul.dropdown-menu{role:"menu"}
            %li
              =fake_a("Either")
            %li.divider
            %li
              =fake_a("Fall")
              =fake_a("Spring")
          =hidden_field_tag "term", get_filter("term"), {:class=>"dropdown-value", :id=>"filter-term"}
    .col-sm-3
      .filter
        Sort:
        .btn-group
          %button.btn.btn-default.btn-xs.dropdown-toggle{type:"button", data:{toggle:"dropdown"}}
            =get_filter("sort").gsub(/\(.*\)/,"")
            %span.caret
          %ul.dropdown-menu{role:"menu"}
            %li
              =fake_a("Course #")
              =fake_a("Start time (early to late)")
              =fake_a("Start time (late to early)")
              =fake_a("Class size (small to large)")
          =hidden_field_tag "sort", get_filter("sort"), {:class=>"dropdown-value", :id=>"filter-sort"}
    .col-sm-3
      =hidden_field_tag "random", nil, {id:"random_field"}
      %button#rand-btn.btn.btn-default.btn-sm{onclick:"$('#random_field').val('true'); $('#form').submit(); return false;"}
        I'm Feeling Lucky
