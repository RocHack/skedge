.modal.fade#bug-modal{tabindex:"-1", role:"dialog", aria:{labelledby:"modal-label", hidden:true}}
  .modal-dialog
    .modal-content
      .modal-header
        %button{type:"button", :class=>"close", data:{dismiss:"modal"}, aria:{hidden:"true"}}
          &times;
        %h3.modal-title#modal-label
          skedge feedback form
        %p.bigger
          bug? question? suggestion?
      .modal-body.m-body
        %input.form-control.email-field{placeholder:"email (optional)"}
        %textarea.form-control{rows:"3", placeholder:"comments"}
        %p.bigger
          thank you!
      .modal-footer
        %button{type:"button", :class=>"btn btn-default", data:{dismiss:"modal"}} Close
        %button{type:"button", :class=>"btn btn-primary", data:{dismiss:"modal"}} Submit
